@model Domain.ViewModels.LoginViewModel

@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
{
<div class="row justify-content-center align-items-center">
    <h2 class="col-12 text-center">Login</h2>
    <input class="col-10 form-control mt-3" placeholder="Your login" asp-for="Login" type="text" />
    <input class="col-10 form-control mt-3" placeholder="Your password" asp-for="Password" type="text" />
    <div class="form-check col-10 mt-3">
        <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
        <label class="form-check-label" asp-for="RememberMe">RememberMe</label>
    </div>
        <input class="form-control btn btn-primary col-10 mt-3" type="submit" value="SignIn" />
    </div>
    }
