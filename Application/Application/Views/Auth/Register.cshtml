@model Domain.ViewModels.RegisterViewModel

@using (Html.BeginForm("Register", "Auth", FormMethod.Post))
{
    <div class="row justify-content-center align-items-center">
        <h2 class="col-12 text-center">Registration</h2>
        <input class="col-10 form-control mt-3" asp-for="Email" placeholder="Your email" />
        <input class="col-10 form-control mt-3" asp-for="Login" placeholder="Your login" />
        <input class="col-10 form-control mt-3" asp-for="Password" placeholder="Your password" />
        <input class="col-10 form-control mt-3" asp-for="RepeatPassword" placeholder="repiat your password" />
        <input class="col-10 btn btn-primary mt-3" value="Register" type="submit" />
    </div>
}